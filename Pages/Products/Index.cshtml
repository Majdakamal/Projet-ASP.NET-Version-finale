@page
@model GestionProduit.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Liste des Produits";
}


<div class="container">
    <h1>Produits</h1>

    <p>
        <a class="btn btn-primary" asp-page="Create">Créer Nouveau</a>

    </p>

    <div class="row">
        <div class="col-md-3">
            <form method="get">
                <div class="form-group">
                    Designation <br /><input type="text" asp-for="Des" /><br /><br />
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>

        </div>
        <div class="col-md-9">
            <div class="row">
              
               
                @foreach (var item in Model.Product)
                {
                    <div class="col-md-3 product-item">
                        <img src="@item.Image" alt="Image" style="width:100px; height:100px; " /><br />
                        <h4>@item.Name</h4>
                        <p>Description: @item.Description</p>
                        <p>Price: @item.Price DH</p>
                        <div class="product-actions">
                            <a asp-page="./Edit" asp-route-id="@item.IdProd" class="btn btn-primary">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.IdProd" class="btn btn-info">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.IdProd" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        padding: 20px;
    }

    .product-item {
        border: 1px solid #ddd;
        padding: 10px;
        margin: 10px;
        text-align: center;
        background-color: #f9f9f9;
    }

    .product-image {
        max-width: 100%;
        height: auto;
        margin-bottom: 10px;
    }

    .product-actions {
        margin-top: 10px;
    }
</style>
